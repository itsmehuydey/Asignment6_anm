<div class="form-contact">
    <div class="container">
        <div class="inner-wrap">
            <div class="box-head">
                <h3 class="inner-sub-title">
                    The login form
                </h3>
                <h2 class="inner-title">Login using <span>{{message}}<span></h2>
            </div>
            <form action="http://127.0.0.1:3000/{{option}}/login" method="POST">
                <div class="inner-form">
                    <div>
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username" placeholder="nguyenthiba@gmail.com">
                    </div>
                    <div>
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" placeholder="Eg. 123456">
                    </div>
                    <div class="inner-button">
                        <button class="button button-dark">
                            Login Now
                        </button>
                        <button class="button button-dark">
                            <a href="http://127.0.0.1:3000/{{option}}/logout" target = _blank class="no-underline">Logout</a>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

